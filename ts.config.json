{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
       "esModuleInterop": true,
      "target": "es5",
      "typeRoots": [
        "node_modules/@types",
        "./typings"
      ],
      "lib": [
        "es2017",
        "dom"
      ],
      "types": [
        "jquery"
      ],
      "module": "es2015",
      "baseUrl": "src",
      "paths": {
        "@app/*": ["app/*"],
        "@environment/*": ["environments/*"],
      },
    },
    "angularCompilerOptions": {
      "enableIvy": true
    }
  }